# jueguito

# importar librería random para números al azar
import random

def lancer():
    # la función randint selecciona un numero al azar que este entre a y b
    # su formato es randint(a, b)
    n1 = random.randint(1,6) 
    n2 = random.randint(1,6)
    return n1, n2

jeu_continu = True
while (jeu_continu): # ciclo infinito para preguntar
    d1 =lancer()
    d2 =lancer()
    print(d1, d2)
    Repond = input("¿Voulez-vous lancer à nouveau? (oui/non): ")
    jeu_continu = Repond.lower() == "oui"
